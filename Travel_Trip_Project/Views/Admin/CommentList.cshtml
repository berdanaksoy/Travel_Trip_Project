@using Travel_Trip_Project.Models.Classes
@model List<comments>

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Comment</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.user</td>
            <td>@item.mail</td>
            <td>@item.comment</td>
            <td>@item.Blog.title</td>
            <td><a href="/Admin/DeleteComment/@item.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/UpdateComment/@item.id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>