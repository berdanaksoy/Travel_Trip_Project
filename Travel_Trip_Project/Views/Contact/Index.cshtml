
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .send-btn {
        padding: 8px 20px;
        background: #b85c7a;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<body>
    <div class="contact">
        <div class="wrap">
            <div class="contact-top">
                <h3>Bizimle İletişime Geç!</h3>
            </div>
            <form action="/Contact/SendMessage" method="post">
                <div class="form">

                    <div>
                        <input name="fullname" type="text" class="textbox" value="Ad ve Soyad:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Fullname';}" required>
                    </div>
                    <div>
                        <input name="mail" type="text" class="textbox" value="Email:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" required>
                    </div>
                    <div>
                        <input name="phone_number" type="text" class="textbox" value="Telefon Numarası:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Phone';}" required>
                    </div>
                    <div>
                        <button type="submit" class="send-btn">Gönder</button>
                    </div>

                </div>
                <div class="form1">
                    <div>
                        <textarea name="message" value="Message:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Message';}" required>Mesajınız:</textarea>
                    </div>
                </div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }
            </form>
            <div class="clear"></div>
            <div class="contact-bottom">
                <div class="contact-left">
                    <div class="contact-add">
                        <h3>Adres</h3>
                        <p>Horizon Travel Group, Dünya Turizm Merkezi, Barbaros Bulvarı No:87, Crystal Tower, 12. Kat Ofis:1203, Beşiktaş / İstanbul, 34349, Türkiye</p>
                        <p>Dahili Numara:1-22-5555</p>
                        <p>Fax:1-22-5555</p>
                        <p>Email:<a href="mailto:tatil_seyahat@gmail.com">tatil_seyahat@gmail.com</a></p>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</body>