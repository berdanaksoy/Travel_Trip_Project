@using Travel_Trip_Project.Models.Classes
@model List<blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.blogImage" />
            </div>
            <div class="left-text">
                <h4>@item.title</h4>
                <span class="doller">@item.date.ToString("dd.MM.yyyy")</span>
                <p>@item.description.Substring(0,100)</p>
                <p><a href="/Blog/BlogDetails/@item.id"><span class="read">Devamını Oku</span></a></p>
            </div>
        </div>
    }

    @Html.Action("Partial2", "Default")
    <div class="clear"></div>
</div>
